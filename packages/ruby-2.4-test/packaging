set -eux

PLATFORM=`uname | tr '[:upper:]' '[:lower:]'`

if [[ "$PLATFORM" == "darwin" ]]; then
  ${BOSH_PACKAGES_DIR:-/var/vcap/packages}/ruby-2.4/bin/gem install nokogiri
  exit 0
fi

source /var/vcap/packages/ruby-2.4/bosh/compile.env

cat >${BOSH_INSTALL_TARGET}/config.ru <<EOF
require_relative 'myapp'
run Myapp
EOF

cat >${BOSH_INSTALL_TARGET}/myapp.rb <<EOF
Myapp = lambda { |env| [200, {}, 'test'] }
EOF

cat >Gemfile <<EOF
source 'https://rubygems.org'
gem 'thin'
EOF

bosh_bundle
bosh_generate_runtime_env
